    <style name="CameraViewButton.Shutter">
        <item name="android:layout_width">@dimen/cameraview_control_size</item>
        <item name="android:layout_height">@dimen/cameraview_control_size</item>
        <item name="android:src">@drawable/ic_cameraview_shutter</item>
    </style>
