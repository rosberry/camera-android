<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CameraViewButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/cameraview_control_size_small</item>
        <item name="android:layout_height">@dimen/cameraview_control_size_small</item>
        <item name="android:background">@drawable/bg_cameraview_button</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:tint">@color/camera_color_control</item>
